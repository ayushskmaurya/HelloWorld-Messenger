<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HelloWorld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryVariant">@color/color1</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="actionBarTheme">@style/Theme.HelloWorld.ActionBar</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.HelloWorld.ActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/color1</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>